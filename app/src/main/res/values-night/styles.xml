    <!--  AppCompatEditText   -->
    <style name="AppCompatEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/font_ibm_plex_sans_semi_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:minHeight">@dimen/dp_55</item>
    </style>

    <style name="AppCompatEditTextSearch" parent="Widget.AppCompat.EditText">

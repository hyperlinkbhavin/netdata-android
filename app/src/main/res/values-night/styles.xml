        <item name="android:minHeight">@dimen/dp_55</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
    </style>


    <style name="Widget.BaseAppTextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">

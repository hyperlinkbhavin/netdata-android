<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:overScrollMode">never</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:stateListAnimator">@null</item>
        <item name="android:windowBackground">@drawable/ic_back_ground</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--  Guideline Start   -->
    <style name="StyleStartGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_begin">@dimen/dp_20</item>
    </style>

    <!--  Guideline End   -->
    <style name="StyleEndGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_end">@dimen/dp_20</item>
    </style>

    <!--  AppCompatButtonGreen   -->
    <style name="AppCompatButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:fontFamily">@font/font_ibm_plex_sans_semi_bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingTop">@dimen/dp_18</item>
        <item name="android:paddingBottom">@dimen/dp_18</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

